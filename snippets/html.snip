snippet token
	{{ @${1:TOKEN} }}${0:TARGET}

snippet check
	<check if="{{ ${1:CONDITION} }}">
		${2}
	</check>
	${0:TARGET}

snippet check-true-false
	<check if="{{ ${1:CONDITION} }}">
		<true>
			${2}
		</true>
		<false>
			${3}
		</false>
	</check>
	${0:TARGET}

snippet repeat
	<repeat group="{{ @${1:GROUP} }}" value="{{ @${3:VALUE} }}">
		${0:TARGET}
	</repeat>

snippet repeat-key
	<repeat group="{{ @${1:GROUP} }}" key="{{ @${2:KEY} }}" value="{{ @${3:VALUE} }}">
		${0:TARGET}
	</repeat>
